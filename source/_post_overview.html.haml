%article.post.tag-getting-started
  %header.post-header
    %span.post-meta
      %time{datetime: article.date.strftime('%Y-%m-%d')}
      = date_link(article)
      - if tags?(article)
        #{tags(article, ', ')}
      
    %h2.post-title= link_to article.title, article
  %section.post-content
    - if cover?(article)
      %p
        =link_to article do
          = cover(article)
    %section.post-excerpt
      %p
        = summary(article)