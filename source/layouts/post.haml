%header.site-head{style: "background-image: url(/images/cover.jpg)"}
  .vertical
    .site-head-content.inner
      - if blog_logo?    
        %a.blog-logo{href: '/'}
          = image_tag blog_logo, alt: 'Blog Logo'
      %h1.blog-title
        %a.blog-logo{href: '/'}
          = blog_name
      %h2.blog-description= blog_description
%main.content{role: :main}
  %article.post.tag-getting-started
    %span.post-meta
      %time{datetime: current_article.date.strftime('%Y-%m-%d')}
        = current_article.date.strftime('%d %b %Y')
      - if tags?
        on #{tags}

    %h1.post-title= current_article.title

    %section.post-content
      - if cover?
        %p= cover
      = content

    %footer.post-footer
      %section.author
        %h4= author[:name]
        %p= author[:bio]
        - if author[:location].present? || author[:website].present?
          %ul.author-meta.clearfix
            - if (location = author[:location]).present?
              %li= location
            - if (website = author[:website]).present?
              %li
                %a{href: website}= website

      %section.share
        %h4 Share this post
        %a.icon-twitter{href: twitter_url, onclick: "window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"}
          %span.hidden Twitter
        %a.icon-facebook{href: facebook_url, onclick: "window.open(this.href, 'facebook-share','width=580,height=296');return false;"}
          %span.hidden Facebook
        %a.icon-google-plus{href: google_plus_url, onclick: "window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"}
          %span.hidden Google+
    #disqus_thread
      :javascript
        /* * * CONFIGURATION VARIABLES * * */
        var disqus_shortname = 'thefrenchcook';
        
        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
      %noscript
        Please enable JavaScript to view the
        %a{:href => "https://disqus.com/?ref_noscript", :rel => "nofollow"} comments powered by Disqus.